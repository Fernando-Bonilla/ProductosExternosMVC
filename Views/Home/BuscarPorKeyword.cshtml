
<h1>@ViewBag.Productos.Count</h1>

<div class="card mb-4 shadow-sm">
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <form method="get" action="/Home/BuscarPorKeyword" class="row g-3 align-items-end">

                <div class="col-12 col-md-5">
                    <label class="form-label">Nombre</label>
                    <input type="text" name="keyword" placeholder="Nombre del producto" required class="form-control" />

                </div>
                <div class="col-12 col-md-2 d-grid">
                    <button class="btn btn-info">
                        Buscar
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered align-middle table-sm">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Id</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ProductosExternosMVC.Services.ProductoDto producto in ViewBag.Productos)
            {
                <tr>
                    <td>@producto.Nombre</td>
                    <td>@producto.Precio</td>
                    <td>@producto.Id</td>
                    <td>@producto.CreatedAt</td>
                    <td>@producto.UpdatedAt</td>
                    <td class="text-end">
                        <a type="button"
                           class="btn btn-primary btn-sm me-1"
                           asp-controller="Productos"
                           asp-route-id="@producto.Id"
                           asp-action="Editar">
                            Modificar
                        </a>

                        <form method="post" class="d-inline">
                            <button type="submit"
                                    class="btn btn-danger btn-sm"
                                    asp-controller="Home"
                                    asp-route-id="@producto.Id"
                                    asp-action="BorrarProducto">
                                Borrar
                            </button>
                        </form>
                    </td>
                </tr>
            }
            <tr>
                <td colspan="4"></td>
            </tr>
        </tbody>
    </table>
</div>  